{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es2019",
    "lib": ["es2019"],
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
  }
}
